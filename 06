nota1 = float(input("informe a primeira nota: "))
nota2 = float(input("informe a segunda nota: "))
media = (nota1 + nota2) / 2

if (media >= 7):
   print("aluno aprovado")
elif (media >= 3 and media < 7):
    print ("aluno vai para prova final")
    notafinal = float(input("informe a nota da prova final do aluno: "))

    mediafinal = (media + notafinal) / 2

    if (mediafinal >= 5 ):
       print("aluno aprovado na final ")
    else: 
         print("alun reprovado na final")
else: 
    print("aluno reprovado direto ")
